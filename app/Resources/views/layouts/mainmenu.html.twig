	<!-- mainmenu -->

<script>
function toggleSubMenu(item) {
	if($(item).parent().hasClass("parent")){
		if($(item).parent().hasClass("over")){
			$(item).parent().removeClass("over");
		}else
			$(item).parent().addClass("over");
	}
}

$('li').mouseleave(function() {
	$(this).removeClass("over");
});
</script>
{% endblock %}
